{% extends "admin/aLayout.twig" %}

{% block title %}Log - Quaver Dashboard{% endblock %}

    {% block head %}

    {% include "admin/scripts/dataTables.js.twig" %}

<script type="text/javascript">
            $(function() {

                table = $('#items').dataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.7/i18n/{{language.large}}.json"
                    },
                    "aoColumns": [
                        {},
                        {},
                        {},
                        {},
                        {},
                        {}
                    ],
                    //"bFilter": false,
                    // "aaSorting": [
                    //     [6, 'desc']
                    // ],
                    "bStateSave": true,
                    "bAutoWidth": false,
                });
            })

        </script>
{% endblock %}


{% block content %}
<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      <div class="btn-group pull-right">

      </div>

          <h1 class="page-header">{{ ('plugins')|t }}</h1>

          <div class="table-responsive">
             <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-hover" id="items">
            <thead>
            <tr>
                <th class="left">Module</th>
                <th class="center">Author</th>
                <th class="center">Version</th>
                <th class="center">Last Modified</th>
                <th class="center">Namespace</th>
                <th class="center">Theme</th>
            </tr>
            </thead>
            <tbody>
                {% for key, item in qv.modules %}

                  <tr class="row-{{ loop.index }}" id="row-{{ loop.index }}">
                    <td class="center">{{ key }}</td>
                    <td class="center">{{ item.params.author }}</td>
                    <td class="center">{{ item.params.version }}</td>
                    <td class="center">{{ item.params.dateLastUpdate }}</td>
                    <td class="center">{{ item.namespace }}</td>
                    <td class="center">{{ item.params.theme }}</td>
                  </tr>
                {% endfor %}

            </tbody>
        </table>
          </div>
        </div>
{% endblock %}
