
{% block nav %}

  <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/admin">Quaver Dashboard</a>
          <p class="navbar-text">Build: {{ qv.build ? qv.build : qv.version }}</p>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="https://github.com/MilloLab/quaver" target="_blank"> <i class="fa fa-github"></i> GitHub</a></li>
            <li><a href="http://quaver.millolab.com" target="_blank"> <i class="fa fa-millolab "></i> Quaver Site</a></li>

            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">{{ qv.language.name[:2] }} <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                {% for lang in qv.languages %}
                  {% if lang.id == qv.language.id %}
                    <li class="disabled"><a href="#">{{ lang.large }}</a></li>
                  {% else %}
                    <li><a href="/language/{{ lang.name }}">{{ lang.large }}</a></li>
                  {% endif %}
                {% endfor %}
              </ul>
            </li>

            {% if qv.user.logged %}
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">{{ qv.user.email }} <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="/">{{ ('back')|t }}</a></li>
                  <li class="divider"></li>
                  <li><a href="/logout">{{ ('logout')|t }}</a></li>
                </ul>
              </li>
            {% endif %}
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

{% endblock %}