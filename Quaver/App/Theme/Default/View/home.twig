{%  extends "layout.twig" %}

{% block body %}

  <div class="container">
    <div class="jumbotron centered">
      <h1>Welcome to Quaver {{ qv.version }}</h1>
      <p>Local Lang: {{ language.locale|replace('_', '-') }}</p>
      <p>Sample String: hello_world = {{ 'hello_world'|t }}</p>

      <h2>Routing</h2>
      <p>Actual Path: {{ qv.url.path }}</p>
      {% for uri in qv.url.uri %}
        <p>URI {{loop.index}}: {{ uri }}</p>
      {% endfor %}
      <p>Custom routes at index.php: <i>$router->addPath('/', GLOBAL_PATH . '/Quaver/Routes.yml');</i></p>

      <h2>Install</h2>
      <ul>
        <li>Download latest version with composer: <strong>composer create-project millolab/quaver path/</strong></li>
      <li>Import <strong>quaver.sql</strong> to your database</li>
      <li>Check <strong>Quaver/Config.php</strong> and <strong>Quaver/Routes.yml</strong></li>
      </ul>

      <h2>Quaver Dashboard</h2>
      <p><a href="/register">Create a user</a> and select "admin" type.</p>
      <p><a href="/login">Login</a> and go to <a href="/admin">Quaver Dashboard</a></p>
    </div>
  </div>

{% endblock %}